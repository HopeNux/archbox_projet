###############################################
# [ARCHBOX]
###############################################
# Maintainer: ARCHBOX <https://github.com/HopeNux/archbox_projet>

pkgname=archbox-theme
pkgver=0.1
pkgrel=1
pkgdesc="A standard theme designed for ArchBox"
arch=('any')
url="https://github.com/HopeNux/archbox_projet"
license=('custom')
groups=('archbox')
depends=('xfce4-panel' 'xfconf' 'xfce4-clipman-plugin' 'orage' 'xfce4-wavelan-plugin' 'xfce4-mixer' 'gstreamer0.10-base-plugins' 'faenza-icon-theme' 'elementary-gtk-theme')
options=('!emptydirs')
source=('archbox-theme.tar.xz')
md5sums=('45f18e5dec40ae5c5f14cde9736982bc')

package() {
  mkdir -pv "$pkgdir/etc/skel/.config" "$pkgdir/usr/share"
  mv -v "$srcdir/xfce4/" "$pkgdir/etc/skel/.config/"
  mv -v "$srcdir/archbox/" "$pkgdir/usr/share/"
  mv -v "$srcdir/bashrc" "$pkgdir/etc/skel/.bashrc2"
  mv -v "$srcdir/gtkrc-2.0" "$pkgdir/etc/skel/.gtkrc-2.0"
}
